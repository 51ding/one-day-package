<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>文件上传</title>
    <style>
        .container {
            width: 200px;
            height: 200px;
            position: relative;
            overflow: hidden;
            border-radius: 50%;
            margin: 50px;
        }

        .avator {

            width: 100%;
            height: 100%;
        }

        .upload_avator {
            width: 100%;
            height: 50px;
            line-height: 50px;
            text-align: center;
            position: absolute;
            bottom: 0;
            background-color: #111;
            opacity: .8;
            cursor: pointer;
            display: none;
        }

        .upload_avator span {
            font-size: 15px;
            color: white;
        }

        .avator-preview {
            width: 500px;
            height: 500px;
            position: fixed;
            left: 50%;
            top: 50%;
            margin-left: -200px;
            margin-top: -250px;
        }


    </style>
    <script src="https://cdn.bootcss.com/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
<div class="container">
    <div>
        <a href="#">
            <img class="avator" src="/img/defaultAvator.png" alt="头像上传"/>
        </a>
    </div>
    <input type="file" id="file_avator" multiple/>
    <div class="upload_avator">
        <span>上传头像</span>
    </div>

</div>
<div>
    <button id="upload">确认上传</button>
</div>
<h2>表单</h2>
<!--enctype="application/x-www-form-urlencoded"-->
<form  id="fileUpload">
    <label for="">姓名</label>
    <input type="text" name="name">
    <label for="">密码</label>
    <input type="text" name="password" >
    <label for="">选择文件</label>
    <input type="file" multiple name="file">
    <button id="btnfileUpload" type="button">提交</button>
    <button id="jsonxhr" type="button">提交json格式数据</button>
</form>

<script>

    $(".container").hover(function () {
        $(".upload_avator").stop().fadeToggle();
    }, function () {
        $(".upload_avator").stop().fadeToggle();
    })

    $(".upload_avator").on("click", function (e) {
        e.preventDefault();
        $("#file_avator").click();
    })

    // $("#upload").on("click", function () {
    //     $.ajax({
    //         url: "/upload",
    //         method: "POST",
    //
    //     })
    // })

    $("#file_avator").on("change", function () {
        console.log(`file name is ${this.value}`);
    })
</script>
<script src="/js/main.js"></script>
</body>
</html>
